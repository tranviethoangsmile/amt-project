            <legend style="color: blue; font-weight: bold;">Tổng hợp nhóm chuyền</legend>
            <thead style="background-color: #CC977A; color: black;">
              <tr>
                <th rowspan="2">Nhóm chuyền</th>
                <th rowspan="2">Ca</th>
                <th rowspan="2">HC</th>
                <th colspan="2">Hiệu suất</th>
                <th colspan="2">Chất lượng</th>
              </tr>
              <tr>
                <th>Đạt</th>
                <th>Không đạt</th>
                <th>Đạt</th>
                <th>Không đạt</th>
              </tr>
            </thead>
            <tbody>

            </tbody>
          </fieldset>
        </table>
      </div>
      <div class="col-lg-4">
        <div class="row">
          <div class="col-4">
            <span><u>Nhóm chuyền:</u></span>
          </div>
          <div class="col-4">
            <select class="form-select-lg"id="group_line_in_week" onchange="get_reason_of_group_line_in_week()">
              <option>--Chọn--</option>
            </select>
          </div>
          <div class="col-4">
            <select class="form-select-lg"id="get_data_of_shift" onchange="get_reason_of_group_line_in_week()">
              <option value="BAL" selected>BAL</option>
