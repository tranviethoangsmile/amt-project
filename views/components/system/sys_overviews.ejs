          <fieldset>
            <legend style="color: blue; font-weight: bold;">Báo cáo AMT</legend>
            <thead style="background-color: #CC977A; color: black;">
              <tr>
                <th rowspan="2">CA</th>
                <th rowspan="2">HC</th>
                <th colspan="2">Hiệu suất</th>
                <th colspan="2">Chất lượng</th>
