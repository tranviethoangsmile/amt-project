    <div class="col-xl-6 col-sm-6 mb-xl-0 mb-2">
        <div class="card">
            <div class="card-header p-3 pt-2">
                <div
                    class="icon icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n4 position-absolute">
