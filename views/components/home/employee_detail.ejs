<div class="modal fade" id="employee_detail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header" style="background-color: black;">
        <h5 class="modal-title" id="exampleModalLabel" style="font-size: 1vw; font-weight: bold;color:white">Thông tin
          nhân viên</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <div class="row">
          <div class="col-3">
            <span>Mã</span>
            <input id="id_employee" class="form-control" disabled />
          </div>
          <div class="col-3">
            <span>Họ tên</span>
            <input id="name_employee" class="form-control" disabled />
          </div>
          <div class="col-3">
            <span>Công đoạn</span>
            <input id="operation_employee" class="form-control" disabled />
          </div>
          <div class="col-3">
            <span>Ca</span>
            <input id="shift" class="form-control" disabled />
          </div>
        </div>
        <form id="reduce_form">
          <div class="row mt-3">
            <div class="col-6">
              <div class="row">
                <div class="col-md-3">
                  <label for="reduce_date">Dời ngày:</label>
                </div>
                <div class="col-md-9">
                  <input type="number" id="reduce_date" name="reduce_date" class="form-control" required maxlength="3" minlength="1"/>
                </div>
              </div>
            </div>
            <div class="col-6">
              <button type="button" class="btn btn-outline-success" onclick="update_reduce_date()">Cập nhật</button>
            </div>
          </div>
        </form>
        <div class="row mt-3">
          <div class="col-3">
            <span>Giờ làm việc</span>
            <input id="word_hrs" class="form-control" disabled />
          </div>
          <div class="col-3">
            <span>Hiệu suất </span>
            <input id="eff_employee" class="form-control" disabled />
          </div>
          <div class="col-3">
            <span>Ngày đào tạo </span>
            <input id="day_working_real" class="form-control" disabled />
          </div>
          <div class="col-3">
            <span>Chỉ tiêu</span>
            <input id="tagets_employee" class="form-control" disabled />
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-6">
            <label for="irr_detail">Lý do</label>
            <select id="irr_detail" class="form-control">
              <option>--chọn--</option>
              <option value="máy hỏng">Máy hỏng</option>
              <option value="chất lượng">Chất lượng</option>
              <option value="Mất cân bàng chuyển">Mất cân bàng chuyển</option>
              <option value="Thiếu wip đầu giờ">Thiếu wip đầu giờ</option>
              <option value="Chờ hàng từ kho">Chờ hàng từ kho</option>
              <option value="Kỹ năng">Kỹ năng</option>
              <option value="Các vấn đề khác">Các vấn đề khác..</option>
            </select>
          </div>
          <div class="col-6">
            <label for="note">Ghi chú</label>
            <textarea id="note" class="form-control"></textarea>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
          </div>
          <div class="col-4">
          </div>
          <div class="col-4">
            <div class="row mt-3">
              <div class="col-md-4">
                <button class="btn btn-success" onclick="save_employee_detail()">Lưu</button>
              </div>
              <div class="col-md-4">
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-danger">Hủy</button>
              </div>
              <div class="col-md-4">
                <button class="btn btn-primary" onclick="refresh()">Làm mới</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>