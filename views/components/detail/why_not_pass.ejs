<div class="modal fade" id="why_not_pass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Lý do không đạt</h5>
            </div>
            <div class="modal-body">
                <form class="form-control" id="note_season_not_pass" name="note_season_not_pass">
                    <div class="row">
                        <div class="col-3">
                            <span>ID: </span>
                            <input style="border: 1px;" id="id_of_employee" readonly/>
                        </div>
                        <div class="col-3">
                            <span>Tên: </span>
                            <input style="border: 1px;" id="name_of_employee" class="form-input"readonly/>
                        </div>
                        <div class="col-3">
                            <span>Số ngày ĐT: </span>
                            <input style="border: 1px;" id="code_training_of_employee" class="form-input"readonly/>
                        </div>
                        <div class="col-3">
                            <span>Công đoạn: </span>
                            <input style="border: 1px;" id="operation_of_employee" class="form-input" readonly/>
                        </div>
                    </div>

                    <fieldset>
                        <div class="form-group">
                            <label for="reason_not_pass">Lý do: </label>
                            <select id="reason_not_pass" class="form-control" onchange="change_reason()" name="reason_not_pass" required>
                                <option value="Chất lượng" selected>Chất lượng</option>
                                <option value="Máy hỏng">Máy hỏng</option>
                                <option value="Không có hàng">Không có hàng</option>
                                <option value="Mất cân bằng chuyền">Mất cân bằng chuyền</option>
                                <option value="Kỹ năng">Kỹ năng</option>
                                <option value="Hỗ trợ việc khác">Hỗ trợ việc khác</option>
                                <option value="Lý do khác">Lý do khác</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="cycle_time">Chu kì đơn: </label>
                            <textarea name="cycle_time" type="text" class="form-control" id="cycle_time"
                                placeholder="chu kì đơn"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="technician_note">Ghi chú: </label>
                            <textarea name="technician_note" type="text" class="form-control" id="technician_note"
                                placeholder="ghi chú" required maxlength="255" minlength="10"></textarea>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="cancel()" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="save_reason_not_pass()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<style>
    label {
        font-weight: bold;
        color: red;
    }

    fieldset {
        border-radius: 5%;
    }
</style>